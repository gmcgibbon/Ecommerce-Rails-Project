%h2 Checkout

= form_for add_customer_path @customer do |f|

	- if @customer.errors.any?
		#error_explanation
			%h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
			%ul
				- @customer.errors.full_messages.each do |msg|
					%li= msg
	%legend Customer Info

	.field
		= f.label :first_name
		= f.text_field :first_name
	.field
		= f.label :last_name
		= f.text_field :last_name
	.field
		= f.label :address
		= f.text_field :address
	.field
		= f.label :email
		= f.text_field :email
	.field
		= f.label :city
		= f.text_field :city
	.field
		= f.label :province_id
		= f.collection_select :province_id, @provinces, :id, :name
	.field
		= f.label :postal_code
		= f.text_field :postal_code

	%legend Payment Method

	.field
		= f.label :payment_method_id
		= f.collection_select :payment_method_id, @payment_methods, :id, :name
	%legend

	.field
		= f.submit "Place Order", :class => "btn btn-default btn-lg"